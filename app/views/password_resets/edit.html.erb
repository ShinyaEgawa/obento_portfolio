<%= provide(:title, "パスワードリセット") %>
<section>
  <h1 class="login-title">パスワードリセット</h1>
  <div class="row">
    <%= form_for(@user, url:password_resets_path(params[:id]) do |f|) %>
      <%= render 'shared/error_messages' %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.label :パスワード, class: "signin-section" %>
      <%= f.password_field :password, placeholder: "パスワード" ,class: "login-field" %>
      <%= f.label :password_confirmation, "パスワード(再確認)", class: "signin-section" %>
      <%= f.password_field :password_confirmation, placeholder: "パスワードの再確認" %>
      <%= f.submit "再設定する", class: "btn" %>
    <% end %>
  </div>
</section>
