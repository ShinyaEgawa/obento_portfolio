<% provide(:title, @user.name) %>
<section>
  <div class="user">
    <div class="user-img">
      <%= gravatar_for @user %>
    </div>
    <h1 class="user-name">
      <%= @user.nickname %>
    </h1>
    <%= @user.email %>
    <%= @user.self_introduction %>
  </div>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <section class="stats">
          <%= render 'shared/stats' %>
          <%= render 'follow_form' if logged_in? %>
        </section>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
<%= will_paginate @microposts %>
</section>
