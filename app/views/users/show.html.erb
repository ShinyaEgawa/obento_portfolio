<% provide(:title, @user.name) %>
<section>
  <div class="user-img">
    <%= gravatar_for @user %>
  </div>
  <h1 style="font-size:30px;">
    <%= @user.nickname %>
  </h1>
  <p style="font-size:15px;">
    <%= @user.self_introduction %>
  </p>
  <% if current_user == @user %>
    <%= link_to "ユーザーの情報を編集する", edit_user_path(current_user), id: "a_invalid", style: "border-bottom: 1px solid #12938B" %>
  <% end %>
  <h2 style="font-size:18px;">
    <% if @user.microposts.any? %>
      投稿数 (<%= @user.microposts.count %>)
      <%= render 'shared/stats' %>
  </h2>
</section>
  <ol class="microposts">
    <%= render @microposts %>
  </ol>
    <% end %>
<section>
<%= will_paginate @microposts %>
</section>
