<% provide(:title, "新規登録") %>
<section>
  <h1>Sign up</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
        <%= f.label :名前 %>
        <%= f.text_field :name %>

        <%= f.label :ニックネーム %>
        <%= f.text_field :nickname %>

        <%= f.label :メールアドレス %>
        <%= f.email_field :email %>

        <%= f.label :自己紹介 %>
        <%= f.text_field :self_introduction %>

        <%= f.label :パスワード %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "パスワード(再確認)" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "新規登録を行う", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</section>
