<section>
  <article class="post">
    <section>
      <li id="micropost-<%= micropost.id %>">
        <h1>
          <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
          <span class="user"><%= link_to micropost.user.nickname, micropost.user, id:"a_invalid" %></span>
        </h1>
        <section class="content">
          <p><%= micropost.content %></p>
        </section>
        <section>
          <%= image_tag micropost.picture.url if micropost.picture? %>
        </section>
        <section>
          <%= link_to(micropost_path(micropost)) do %>
            <p class="comment-btn">コメントを残す</p>
          <% end %>
        </section>
        <%= render "likes/like", micropost: micropost %>
        <section class="timestamp">
          <p class="date">
            Posted <%= time_ago_in_words(micropost.created_at) %> ago.
            <% if current_user?(micropost.user) %>
              <%= link_to "この投稿を削除する", micropost, method: :delete,
                                             data: { confirm: "削除してもよろしいですか?" },
                                             id: "a_invalid"  %>
            <% end %>
          </p>
        </section>
      </li>
    </section>
  </article>
</section>
